#!/bin/sh
#
# Pre-commit hook to run linting and type checking
#

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory (has package.json)
if [ ! -f "package.json" ]; then
    echo "âŒ Error: package.json not found. Are you in the project root?"
    exit 1
fi

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
    echo "âŒ TypeScript type checking failed! Please fix the type errors before committing."
    echo "Run 'npx tsc --noEmit' to see the errors."
    exit 1
fi

# Run the linter
echo "ğŸ”§ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
    echo "âŒ Linting failed! Please fix the errors before committing."
    echo "Run 'npm run lint' to see the errors."
    exit 1
fi

# Run the build
echo "ğŸ—ï¸  Running build..."
npm run build
if [ $? -ne 0 ]; then
    echo "âŒ Build failed! Please fix the build errors before committing."
    echo "Run 'npm run build' to see the errors."
    exit 1
fi

echo "âœ… All pre-commit checks passed! Proceeding with commit..."
exit 0 