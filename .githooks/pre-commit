#!/bin/sh
#
# Pre-commit hook to run linting and type checking
#

echo "🔍 Running pre-commit checks..."

# Check if we're in the right directory (has package.json)
if [ ! -f "package.json" ]; then
    echo "❌ Error: package.json not found. Are you in the project root?"
    exit 1
fi

# Run TypeScript type checking
echo "📝 Checking TypeScript types..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
    echo "❌ TypeScript type checking failed! Please fix the type errors before committing."
    echo "Run 'npx tsc --noEmit' to see the errors."
    exit 1
fi

# Run the linter
echo "🔧 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
    echo "❌ Linting failed! Please fix the errors before committing."
    echo "Run 'npm run lint' to see the errors."
    exit 1
fi

# Run the build
echo "🏗️  Running build..."
npm run build
if [ $? -ne 0 ]; then
    echo "❌ Build failed! Please fix the build errors before committing."
    echo "Run 'npm run build' to see the errors."
    exit 1
fi

echo "✅ All pre-commit checks passed! Proceeding with commit..."
exit 0 